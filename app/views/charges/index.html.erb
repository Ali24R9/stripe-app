<%= form_tag charges_confirm_path do %>
  <div class="row">
    <h3>One Time Shipment</h3>
    <p>One shipment of 3 items for $20</p>
    <%= radio_button_tag(:amount, 2000) %>
    <%= hidden_field_tag :name, "1 box" %>
  </div>
    <hr/>
  <div class="row">
    <h3>Two Time Shipment</h3>
    <p>Two shipments of 3 items for $35</p>
    <%= radio_button_tag(:amount, 3500) %>
    <%= hidden_field_tag :name, "2 boxes" %>

  </div>
  <hr/>
  <div class="row">
    <h3>Three Time Shipment</h3>
    <p>Three shipments of 3 items for $50</p>
    <%= radio_button_tag(:amount, 5000) %>
    <%= hidden_field_tag :name, "3 boxes" %>

  </div>
  <hr/>
  <div class="row">
    <h3>Yearly Subscription</h3>
    <p>12 shipments of 3 items for $110</p>
    <%= radio_button_tag(:amount, 11000) %>
    <%= hidden_field_tag :name, "12 boxes" %>
  </div>
  <%= submit_tag "Submit" %>
<% end %>